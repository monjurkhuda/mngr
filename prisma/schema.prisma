generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  username  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  email     String    @unique
  Role      Role      @default(USER)
  image     String?
  Tasks     Task[]
  Projects  Project[]
}

enum Role {
  ADMIN
  USER
}

model Project {
  id          String    @id @default(uuid())
  ownerId     String
  User        User?     @relation(fields: [ownerId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  title       String
  description String
  Tasks       Task[]
  dueDate     String
  slug        String?   @unique
  completed   Boolean   @default(false)
  completedAt DateTime?
}

model Task {
  id           String    @id @default(uuid())
  assignedToId String
  User         User?     @relation(fields: [assignedToId], references: [id])
  title        String    @unique
  description  String
  Project      Project[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  dueDate      String?
  priority     Int
  slug         String?   @unique
  completed    Boolean   @default(false)
  completedAt  DateTime?
}
